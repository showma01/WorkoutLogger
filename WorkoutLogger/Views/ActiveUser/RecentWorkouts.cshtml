@using WorkoutLogger.Models
@model RecentWorkoutsViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Recent Workouts";
}

<h3>Recent Workouts</h3>
<hr />

<div class="table-responsive">
    <table class="table table-striped ">
        <tr>
            <th>Type</th>
            <th>Intensity</th>
            <th>Length(min)</th>
        </tr>
        @foreach (var workout in Model.RecentWorkoutList)
        {
            <tr>
                <td>@workout.WorkoutType</td>
                <td>@workout.Intensity</td>
                <td>@workout.Length</td>
            </tr>
        }
    </table>
    <nav>
        <ul class="pagination">
            @for (var i = 0; i < Model.TotalWorkoutsCount/5; i++)
            {
                <li><a href="/ActiveUser/RecentWorkouts/@i">@i</a></li>
            }
        </ul>
    </nav>
</div>