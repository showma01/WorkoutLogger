                                <li><a href="#">Dairy Products</a></li>
                                <li><a href="#">Grains/Cereals</a></li>
                                <li><a href="#">Meat/Poultry</a></li>
                                <li><a href="#">Produce</a></li>
                                <li><a href="#">Seafood</a></li>
                            </ul>
                        </li>
                    </ul>
